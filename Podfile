use_frameworks!
platform :ios, '13.0' #Using :ios for Prism OSX, because Prism using Catalyst and not a native OS X application

target 'Prism' do
  pod 'OrkaPrism', path: "./"
  #examples:
    #pod 'OrkaPrism', path: "./", :subspecs => ["Slider"]
    #pod 'OrkaPrism', path: "./", :subspecs => ["Button/round"]
    #pod 'OrkaPrism', path: "./", :subspecs => ["Slider/fullscreen", "Slider/square"]
end

target 'Prism OSX' do
  pod 'OrkaPrism', path: "./"
  #examples:
    #pod 'OrkaPrism', path: "./", :subspecs => ["Slider"]
    #pod 'OrkaPrism', path: "./", :subspecs => ["Button/round"]
    #pod 'OrkaPrism', path: "./", :subspecs => ["Slider/fullscreen", "Slider/square"]
end
